<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleVideoActivity"
    android:orientation="vertical"
    android:id="@+id/single_video_frame"
    android:background="@drawable/bcg">


    <VideoView
        android:id="@+id/single_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

        <Button
            android:id="@+id/close_sv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/left"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>


        <LinearLayout
            android:id="@+id/sv_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_gravity="right|bottom">

            <ToggleButton
                android:id="@+id/sv_like"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:checked="false"
                android:background= "@drawable/like_selector"
                android:textOff=""
                android:textOn=""/>

            <Button
                android:id="@+id/sv_comment"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/w_comment" />

            <Button
                android:id="@+id/sv_share"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/w_share" />

            <Button
                android:id="@+id/sv_more"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/w_more" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/vedio_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_gravity="left|bottom">

            <TextView
                android:id="@+id/textView_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\@username"
                android:textSize="20sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/textView_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#tab"
                android:textSize="18sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/textView_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="describe detail"
                android:textSize="15sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/textView_bgm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŽµBGM"
                android:textSize="15sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>


</FrameLayout>