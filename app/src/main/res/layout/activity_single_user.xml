<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff7a2"
    android:orientation="vertical"
    tools:context=".SingleUserActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/single_user_Mybcg"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:scaleType="centerCrop"
            android:src="@drawable/my_bcg" />

        <Button
            android:id="@+id/single_user_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/black_left" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/single_user_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="168dp"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/single_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textColor="#cca266 "
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/single_userID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户ID"
                    android:textColor="#cca266 "
                    android:textSize="15sp" />

            </LinearLayout>

            <ToggleButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/focus_selector"
                android:checked="false"
                android:textOff="添加\n好友"
                android:textOn="好友" />

            <ToggleButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/focus_selector"
                android:checked="false"
                android:textOff="关注"
                android:textOn="已关注" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="点赞数"
            android:textColor="#cca266 "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/single_user_num_like"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="100"
            android:textColor="#cca266 "
            android:textSize="14sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="关注数"
            android:textColor="#cca266 "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/single_user_num_focus"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="20"
            android:textColor="#cca266 "
            android:textSize="14sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="粉丝数"
            android:textColor="#cca266 "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/single_user_num_fans"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="20"
            android:textColor="#cca266 "
            android:textSize="14sp" />

        <Button
            android:id="@+id/num_friend_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="#fff7a2"
            android:text="好友数"
            android:textColor="#cca266 "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/single_user_num_friends"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="20"
            android:textColor="#cca266 "
            android:textSize="14sp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/single_user_btn_vedio"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="#ffcd74"
            android:text="视频"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/single_user_btn_like"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#ffcd74"
            android:text="点赞"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/single_user_video1"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

                <ImageView
                    android:id="@+id/single_user_video2"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

                <ImageView
                    android:id="@+id/single_user_video3"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/single_user_video4"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

                <ImageView
                    android:id="@+id/single_user_video5"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

                <ImageView
                    android:id="@+id/single_user_video6"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/single_user_video7"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

                <ImageView
                    android:id="@+id/single_user_video8"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

                <ImageView
                    android:id="@+id/single_user_video9"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>
