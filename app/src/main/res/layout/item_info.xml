<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#fff7a2"
    android:orientation="horizontal"
    android:id="@+id/LinearLayout_item_info">


        <Button
            android:id="@+id/info_user_pic"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#CCCCFF"
            android:text="头像"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="225dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="UserName1"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#cca266" />

            <TextView
                android:id="@+id/info_kind_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="\通知"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#cca266" />

            <TextView
                android:id="@+id/info_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="通知时间"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#cca266" />
        </LinearLayout>

        <Button
            android:id="@+id/info_vedio_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="3dp"
            android:background="#FFFFFF"
            android:text="视频\n预览"
            android:textColor="#000000" />

</LinearLayout>


