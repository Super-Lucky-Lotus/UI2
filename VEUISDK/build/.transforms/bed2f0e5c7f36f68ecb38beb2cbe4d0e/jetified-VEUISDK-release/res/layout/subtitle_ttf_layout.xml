<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/subtitle_ttf_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:visibility="gone">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <CheckBox
                android:id="@+id/cbSubtitleBold"
                style="@style/subtitle_switch_style"
                android:layout_centerInParent="true"
                android:drawableRight="@drawable/subtitle_switch"
                android:text="@string/text_style_bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbSubtitleItalic"
                style="@style/subtitle_switch_style"
                android:layout_centerInParent="true"
                android:drawableRight="@drawable/subtitle_switch"
                android:text="@string/text_style_italic"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <CheckBox
                android:id="@+id/cbSubtitleShadow"
                style="@style/subtitle_switch_style"
                android:layout_centerInParent="true"
                android:drawableRight="@drawable/subtitle_switch"
                android:text="@string/text_style_shadow"/>
        </RelativeLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/hsvSubtitleTTF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/llistview_ttf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <GridView
                android:id="@+id/gridview_ttf"
                style="@style/listviewStyle_trans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:numColumns="2"/>
        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>