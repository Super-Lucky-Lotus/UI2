<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivColorDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_subtitle_color_default"
            android:gravity="center_horizontal"/>


        <com.veuisdk.ui.ColorDragScrollView
            android:id="@+id/scrollColorPicker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/transparent_white"
            android:textSize="@dimen/text_size_12"
            android:layout_height="wrap_content"
            android:text="@string/border_size"/>

        <SeekBar
            android:id="@+id/sbBorder"
            style="@style/seekbar_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:progress="0"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-15dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
