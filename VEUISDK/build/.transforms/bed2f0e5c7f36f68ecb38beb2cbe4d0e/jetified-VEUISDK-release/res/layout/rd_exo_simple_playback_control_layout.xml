<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/transparent_black"
        >

        <TextView
            android:id="@+id/rd_exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/rd_exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/white"
            />


        <com.veuisdk.ui.RdSeekBar
            android:id="@+id/rd_exo_progress"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/rd_exo_duration"
            android:layout_toRightOf="@+id/rd_exo_position"
            android:maxHeight="8px"
            android:minHeight="8px"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:progressDrawable="@drawable/video_editor_progress"
            android:thumb="@drawable/seekbar_thumb"
            android:thumbOffset="23dp"/>


    </RelativeLayout>

    <ImageView
        android:id="@+id/rd_exo_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/btn_play"/>

    <ImageView
        android:id="@+id/rd_exo_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/btn_pause"/>

</FrameLayout>
