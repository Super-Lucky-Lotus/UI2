<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:background="@color/fragment_content_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/cbToningAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:button="@drawable/toning_all"
            android:checked="false"
            android:gravity="center"
            android:text="@string/toning_all"
            android:textColor="@color/transparent_white"
            android:textSize="@dimen/text_size_14"/>

        <com.vecore.base.lib.ui.ExtButton
            android:id="@+id/btnDiff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/reset"
            android:background="@drawable/btn_toning_reset_bg"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/toning_diff"
            android:textColor="@color/transparent_white"
            android:textSize="@dimen/text_size_14"/>

        <com.vecore.base.lib.ui.ExtButton
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_toning_reset_bg"
            android:gravity="center"
            android:text="@string/toning_reset"
            android:textColor="@color/transparent_white"
            android:textSize="@dimen/text_size_14"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/tvFilterBrightness"
                style="@style/filter_config_menu_title"
                android:button="@drawable/filter_brightness"
                />

            <com.veuisdk.ui.ExtFilterSeekBar
                android:id="@+id/sbar_brightness"
                style="@style/filter_config_sbar"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/tvFilterContrast"
                style="@style/filter_config_menu_title"
                android:button="@drawable/filter_contrast"
                />

            <com.veuisdk.ui.ExtFilterSeekBar
                android:id="@+id/sbar_contrast"
                style="@style/filter_config_sbar"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/tvFilterSaturation"
                style="@style/filter_config_menu_title"
                android:button="@drawable/filter_saturation"
                />

            <com.veuisdk.ui.ExtFilterSeekBar
                android:id="@+id/sbar_saturation"
                style="@style/filter_config_sbar"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/tvFilterSharpen"
                style="@style/filter_config_menu_title"
                android:button="@drawable/filter_sharpen"
                />

            <com.veuisdk.ui.ExtFilterSeekBar
                android:id="@+id/sbar_sharpen"
                style="@style/filter_config_sbar"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/tvFilterTemperature"
                style="@style/filter_config_menu_title"
                android:button="@drawable/filter_temperature"
                />

            <com.veuisdk.ui.ExtFilterSeekBar
                android:id="@+id/sbar_temperature"
                style="@style/filter_config_sbar"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/tvFiltervignette"
                style="@style/filter_config_menu_title"
                android:button="@drawable/filter_vignette"/>

            <com.veuisdk.ui.ExtFilterSeekBar
                android:id="@+id/sbar_vignette"
                style="@style/filter_config_sbar"
                />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>

