<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ivSubtitleLeft"
            style="@style/subtitle_position_button_style"
            android:src="@drawable/subtitle_left"/>

        <ImageButton
            android:id="@+id/ivSubtitleHoriMid"
            style="@style/subtitle_position_button_style"
            android:src="@drawable/subtitle_hori_mid"/>

        <ImageButton
            android:id="@+id/ivSubtitleRight"
            style="@style/subtitle_position_button_style"
            android:src="@drawable/subtitle_right"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ivSubtitleTop"
            style="@style/subtitle_position_button_style"
            android:src="@drawable/subtitle_top"/>

        <ImageButton
            android:id="@+id/ivSubtitleVertMid"
            style="@style/subtitle_position_button_style"
            android:src="@drawable/subtitle_vert_mid"/>

        <ImageButton
            android:id="@+id/ivSubtitleBottom"
            style="@style/subtitle_position_button_style"
            android:src="@drawable/subtitle_bottom"/>


    </LinearLayout>
</LinearLayout>