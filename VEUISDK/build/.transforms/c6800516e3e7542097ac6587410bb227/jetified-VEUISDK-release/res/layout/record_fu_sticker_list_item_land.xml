<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:square="http://schemas.android.com/apk/res-auto"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <com.veuisdk.ui.ExtSquareImageView
            android:id="@+id/ivItemImage"
            android:layout_width="@dimen/record_faceu_item_size_horizontal"
            android:layout_height="@dimen/record_faceu_item_size_horizontal"
            android:background="@null"
            square:squareBgColor="@color/transparent"
            square:squareBorderColorN="@color/black"
            square:squareBorderColorP="@color/main_orange"
            square:squareBorderWidth="1.5dp"
            square:squareChecked="false"
            square:squareCornersRadius="5dp"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/down_item_layout"
        android:layout_width="@dimen/filter_list_item_size"
        android:layout_height="@dimen/filter_list_item_size"
        android:layout_gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/down_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minHeight="@dimen/down_width"
            android:minWidth="@dimen/down_width"
            android:src="@drawable/down_btn"/>

        <com.veuisdk.ui.CircleProgressBarView
            android:id="@+id/down_pbar"
            android:layout_width="@dimen/down_width"
            android:layout_height="@dimen/down_width"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>

</FrameLayout>