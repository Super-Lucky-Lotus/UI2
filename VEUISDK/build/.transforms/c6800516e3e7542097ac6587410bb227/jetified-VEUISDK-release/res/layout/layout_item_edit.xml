<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true">

    <com.vecore.base.lib.ui.ExtButton
        android:id="@+id/btn_edit_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/btn_add_item"
        android:background="@drawable/shape_btn_rect_bg"
        android:button="@null"
        android:gravity="center_horizontal"
        android:paddingLeft="17dp"
        android:paddingTop="3dp"
        android:paddingRight="17dp"
        android:paddingBottom="3dp"
        android:text="@string/cancel"
        android:textColor="@color/message_text_hint"
        android:textSize="@dimen/text_size_13"
        android:visibility="gone"/>


    <com.vecore.base.lib.ui.ExtButton
        android:id="@+id/btn_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_btn_rect_bg"
        android:button="@null"
        android:gravity="center_horizontal"
        android:paddingLeft="40dp"
        android:paddingTop="5dp"
        android:paddingRight="40dp"
        android:paddingBottom="5dp"
        android:text="@string/add"
        android:textColor="@color/message_text_hint"
        android:textSize="@dimen/text_size_15"/>


    <com.vecore.base.lib.ui.ExtButton
        android:id="@+id/btn_del_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/btn_add_item"
        android:background="@drawable/shape_btn_rect_bg"
        android:button="@null"
        android:gravity="center_horizontal"
        android:paddingLeft="17dp"
        android:paddingTop="3dp"
        android:paddingRight="17dp"
        android:paddingBottom="3dp"
        android:text="@string/del"
        android:textColor="@color/message_text_hint"
        android:textSize="@dimen/text_size_13"
        android:visibility="gone"/>


</RelativeLayout>