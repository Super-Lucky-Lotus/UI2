<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/sticker_add_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/edit_menu_bg"
                android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/tvAddProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:maxLines="1"
                    android:minHeight="23dp"
                    android:text="@string/subtitle_progress_default"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/text_size_16"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|bottom"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom">

                        <ImageView
                            android:id="@+id/ivPlayerState"
                            android:layout_width="@dimen/add_sub_play_state_size"
                            android:layout_height="@dimen/add_sub_play_state_size"
                            android:contentDescription="@string/empty"
                            android:minWidth="28dp"
                            android:minHeight="28dp"
                            android:onClick="clickView"
                            android:padding="5dp"
                            android:scaleType="center"
                            android:src="@drawable/edit_music_play"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:clipChildren="false">

                        <com.veuisdk.videoeditor.widgets.TimelineHorizontalScrollView
                            android:id="@+id/priview_sticker_line"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fillViewport="true"
                            android:scrollbars="none"
                            android:clipChildren="false">

                            <LinearLayout
                                android:id="@+id/subtitleline_media"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:clipChildren="false">

                                <com.veuisdk.ui.ThumbNailLine
                                    android:id="@+id/subline_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </com.veuisdk.videoeditor.widgets.TimelineHorizontalScrollView>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <include
                layout="@layout/layout_item_edit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"/>

            <!--<LinearLayout-->
                <!--android:id="@+id/addTitleLayout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="vertical">-->

                <!--<include layout="@layout/fragment_title_layout"/>-->
            <!--</LinearLayout>-->
        </LinearLayout>

        <View
            android:id="@+id/word_hint_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"/>

    </FrameLayout>
</RelativeLayout>