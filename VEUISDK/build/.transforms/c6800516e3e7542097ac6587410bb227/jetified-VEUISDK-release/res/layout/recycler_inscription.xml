<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:gravity="center_vertical"
              android:orientation="horizontal"
    android:background="@color/dark_bg"
    android:layout_marginTop="@dimen/dimen_20">

    <Button
        android:id="@+id/btn_use"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_30"
        android:background="@drawable/voice_text_tv_bg"
        android:layout_centerVertical="true"
        android:text="使用"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_alignParentRight="true"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_10"
        android:layout_toLeftOf="@id/btn_use">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="你除了努力别无选择"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ae_list_bg"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/dimen_10"
            android:textSize="@dimen/text_size_14"
            android:text="从今天起\n努力去做一个可爱的人..."/>

        <TextView
            android:id="@+id/tv_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/item_title_textcolor"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_size_14"
            android:text="2131321人使用"/>

    </RelativeLayout>



</RelativeLayout>