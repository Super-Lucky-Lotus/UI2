<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:extCircle="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <com.veuisdk.ui.ExtCircleImageView
            android:id="@+id/ivItemImage"
            android:layout_width="@dimen/record_filter_item_size_horizontal"
            android:layout_height="@dimen/record_filter_item_size_horizontal"
            android:background="@null"
            extCircle:circleBgColor="@color/transparent"
            extCircle:circleBorderColor="@color/main_orange"
            extCircle:circleBorderWidth="2dp"
            extCircle:circleChecked="false"/>
    </RelativeLayout>

    <com.vecore.base.lib.ui.ExtTextView
        android:id="@+id/tvItemCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:maxWidth="@dimen/record_filter_item_size_horizontal"
        android:textColor="@color/record_menu_txtcolor_n"
        android:textIsSelectable="false"
        android:textSize="@dimen/text_size_12"/>

</LinearLayout>