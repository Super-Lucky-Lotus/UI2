<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/llParteditAdd"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/fragment_titlebar_bg"
              android:orientation="vertical"
              android:visibility="gone">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/add_scene"
        android:textColor="@color/white"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvAddImage"
            style="@style/partedit_add_btn_style"
            android:drawableTop="@drawable/btn_add_image"
            android:text="@string/ae_media_item_image"/>

        <TextView
            android:id="@+id/tvAddVideo"
            style="@style/partedit_add_btn_style"
            android:drawableTop="@drawable/btn_add_video"
            android:text="@string/select_media_title_video"/>


        <TextView
            android:id="@+id/tvAddText"
            style="@style/partedit_add_btn_style"
            android:drawableTop="@drawable/btn_add_text"
            android:text="@string/preview_text"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivPardeditAddCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_bottom_cancel"/>

</LinearLayout>